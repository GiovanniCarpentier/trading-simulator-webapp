---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import TradingSystemAnalyzer from '../components/TradingSystemAnalyzer';
---

<Layout title="Trading System Analyzer">
  <div class="min-h-screen bg-[#1a1a1a] py-10">
    <div class="container mx-auto max-w-7xl px-4">
      <header class="relative w-full h-[50vh] sm:h-[60vh] flex items-center justify-center text-center overflow-hidden">
        <!-- Video Background -->
        <video 
          autoplay 
          loop 
          muted 
          playsinline 
          class="absolute top-0 left-0 w-full h-full object-cover"
        >
          <source src="header.mp4" type="video/mp4" />
          Your browser does not support the video tag.
        </video>
      
        <!-- Dark Overlay for Readability -->
        <div class="absolute inset-0 bg-black/50"></div>
      
        <!-- Glassmorphism Content Box -->
        <div class="relative z-10 bg-white/10 backdrop-blur-lg rounded-2xl p-6 sm:p-8 border border-white/20 max-w-4xl mx-auto shadow-xl w-[90%] sm:w-auto">
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-white drop-shadow-lg leading-tight">
            Trading System Analyzer
          </h1>
          <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mt-3 sm:mt-4 max-w-3xl mx-auto leading-relaxed">
            Simulate and analyze your trading strategy with advanced Monte Carlo simulation.
          </p>
        </div>
      </header>
      

            <main>
                <TradingSystemAnalyzer client:load />
            </main>

            <footer class="mt-10 text-center text-gray-500">
                <p class="text-gray-400">
                    Â© {new Date().getFullYear()} Trading System Analyzer. 
                    For educational purposes only.
                </p>
                <p class="text-sm mt-2 text-gray-500">
                    Disclaimer: This tool is a simulation and should not be considered 
                    financial advice. Always consult with a financial professional.
                </p>
            </footer>
        </div>
    </div>
</Layout>

<style>
    body {
        background-color: #1a1a1a;
        color: white;
    }
</style>